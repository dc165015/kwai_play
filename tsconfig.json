{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "src/*": ["./src/*"],
            "lib/*": ["./src/lib/*"],
        },
        "target": "es2015",
        "strict": true,
        "allowJs": true,
        "module": "es2015",
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["es2018", "dom"],
        "outDir": "dist",
        "sourceMap": true,
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.js",
        "./types/**/*.d.ts"
    ],
    "exclude": [
        "./dist/*",
        "./.temp/*",
    ]
}